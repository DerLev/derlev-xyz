<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="3.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:sitemap="http://www.sitemaps.org/schemas/sitemap/0.9">
  <xsl:template match="/">
    <html>
      <head>
        <title>Sitemap for DerLev</title>
        <style type="text/css">
          * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
          }

          body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            gap: .5rem;
            font-family: Arial, sans-serif;
            background-color: #e2e8f0;
            color: #020617;
            padding-bottom: .75rem;
          }

          header {
            background-color: #6366f1;
            padding: 4rem 2rem;
            color: #f1f5f9;
            display: flex;
            justify-content: center;
            align-items: center;
            border-bottom: 1px solid #3730a3;
            flex-direction: column;
          }

          header h1 {
            width: 100%;
            max-width: 42rem;
          }

          header div {
            width: 100%;
            max-width: 42rem;
          }

          header div a {
            color: #e0e7ff;
          }

          header div a:hover {
            color: #c7d2fe;
          }

          main {
            flex-grow: 1;
            display: flex;
            justify-content: center;
          }

          #urls-list {
            width: 100%;
            max-width: 42rem;
            background-color: #f8fafc;
            padding: .5rem;
            border: 1px solid #f1f5f9;
            border-radius: 0.25rem;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
          }

          #urls-list ul {
            padding-left: 1rem;
            list-style: circle outside;
            display: flex;
            flex-direction: column;
            gap: .375rem;
          }

          .li-wrapper {
            display: flex;
            flex-direction: column;
            width: 100%;
            gap: .0725rem;
          }

          .li-info {
            font-size: .875rem;
            line-height: 1.25rem;
          }

          .url-lastmod, .url-changefreq {
            font-style: italic;
          }
        </style>
      </head>
      <body>
        <header>
          <h1>List of URLs for <code>derlev.xyz</code>:</h1>
          <div>
            <a href="/">Go Home</a>
          </div>
        </header>
        <main>
          <div id="urls-list">
            <ul>
              <xsl:for-each select="sitemap:urlset/sitemap:url">
                <li>
                  <div class="li-wrapper">
                    <code><xsl:value-of select="sitemap:loc" /></code>
                    <div class="li-info">Last updated on <span class="url-lastmod"><xsl:value-of select="sitemap:lastmod" /></span>, Updates <span class="url-changefreq"><xsl:value-of select="sitemap:changefreq" /></span></div>
                  </div>
                </li>
              </xsl:for-each>
            </ul>
          </div>
        </main>
      </body>
    </html>
  </xsl:template>
</xsl:stylesheet>
